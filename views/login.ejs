<%- layout("layouts/boilerplate.ejs") %>
<div class="background-box">
  <div class="register-section">
    <div class="register-form p-3 col-12 col-sm-9 col-md-7 col-lg-4 rounded-4">
      <h1 class="logo mx-auto text-center">Sociogram</h1>
      <form action="/login" method="POST" class="mx-auto needs-validation">
        <input
          type="text"
          name="username"
          placeholder="Username"
          id="username"
          class="form-control my-3 p-2"
          required
        />
        <div class="invalid-feedback">Enter Username</div>

        <input
          type="password"
          name="password"
          placeholder="Password"
          id="password"
          class="form-control my-3 p-2"
          required
        />
        <div class="invalid-feedback">Enter Password</div>

        <button class="btn btn-primary col-12">Login</button>
      </form>

      <div class="ask-or mt-4 text-center">
        <span class="me-2">Create a new account</span>
        <a href="/signup" class="text-primary">Sign Up</a>
      </div>
    </div>
  </div>
</div>
